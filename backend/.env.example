# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# For Docker PostgreSQL (default):
# DATABASE_URL=postgresql://techhub:techhub_password@localhost:5433/techhub_delivery

# Inflow API Configuration
INFLOW_API_URL=https://cloudapi.inflowinventory.com
INFLOW_COMPANY_ID=your-company-id-here
INFLOW_API_KEY=your_api_key_here

# Inflow Webhook
INFLOW_WEBHOOK_ENABLED=true
INFLOW_WEBHOOK_URL=https://your-app.com/api/inflow/webhook
# INFLOW_WEBHOOK_SECRET is optional; it is stored when the webhook is registered.
# INFLOW_WEBHOOK_SECRET=your-secret-key
# Events can be CSV or JSON array.
INFLOW_WEBHOOK_EVENTS=orderCreated,orderUpdated

# Inflow Polling Sync (fallback when webhooks are enabled)
# Set to false to disable polling sync for testing purposes
INFLOW_POLLING_SYNC_ENABLED=true

# Optional: Azure Key Vault (if using instead of INFLOW_API_KEY)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Secret Key (change in production)
SECRET_KEY=change-me-in-production

# SMTP Email Configuration (for Order Details emails)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=techhub@tamu.edu
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
EMAIL_FROM_ADDRESS=techhub@tamu.edu
EMAIL_FROM_NAME=TechHub Technology Services

# Power Automate Teams Notifications (for direct recipient notifications)
TEAMS_RECIPIENT_NOTIFICATIONS_ENABLED=false
POWER_AUTOMATE_FLOW_URL=https://prod-XX.westus.logic.azure.com:443/workflows/...
